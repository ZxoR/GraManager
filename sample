CREATE TABLE IF NOT EXISTS "dealInformation" (
    "dealID" INTEGER NOT NULL,
    "buyerID" INTEGER NOT NULL,
    "buyerName" TEXT,
    "buyerOrdered" REAL,
    "buyerPaid" INTEGER DEFAULT (0)
);

CREATE TABLE IF NOT EXISTS "dealslist" (
    "id" INTEGER PRIMARY KEY AUTOINCREMENT,
    "dealName" TEXT,
    "dealWith" TEXT,
    "dealLocation" TEXT,
    "dealDate" TEXT,
    "pricePerGram" INTEGER
);

